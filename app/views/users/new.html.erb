<% provide :title, "Sign Up" %>

<h1>Sign Up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |u| %>
      <%= render 'shared/error_messages' %>
      <%= u.label :name %>
      <%= u.text_field :name, class: 'form-control' %>
      <%= u.label :email %>
      <%= u.text_field :email, class: 'form-control' %>
      <%= u.label :password %>
      <%= u.password_field :password, class: 'form-control' %>
      <%= u.label :password_confirmation, "Confirmation" %>
      <%= u.password_field :password_confirmation, class: 'form-control' %>
      
      <%= u.submit "Sign Me Up", class: "btn btn-primary" %>
    <% end %>
      
  </div>
  
</div>
